#include <iostream>

using namespace std;

int main() {
    char caractere;

    // Solicita ao usuário que insira um caractere
    cout << "Digite um caractere: ";
    cin >> caractere;

    // Converte o caractere para minúsculo para facilitar a verificação
    caractere = tolower(caractere);

    // Verifica se o caractere é uma vogal usando o comando switch case
    switch (caractere) {
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
            cout << "O caractere " << caractere << " é uma vogal." << endl;
            break;
        default:
            cout << "O caractere " << caractere << " não é uma vogal." << endl;
            break;
    }

    return 0;
}
